@using LibraryManagment.ViewModel;
@model IEnumerable<CustomerViewModel>

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Customer" asp-action="Create">Create new customer</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Borrowed books</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var customerVM in Model)
        {
        <tr>
            <th>@customerVM.Customer.CustomerId</th>
            <th>@customerVM.Customer.Name</th>
            <th>@customerVM.BookCount</th>
            <th><a class="btn btn-info" asp-area="" asp-controller="Customer" asp-action="Update" asp-route-id="@customerVM.Customer.CustomerId">Edit</a></th>
            <th><a class="btn btn-danger" asp-area="" asp-controller="Customer" asp-action="Delete" asp-route-id="@customerVM.Customer.CustomerId">Delete</a></th>
        </tr>
        }
    </tbody>
</table>