@model IEnumerable<Book>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Borrower</th>
            <th>Return</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var book in Model)
        {
            <tr>
                <td>@book.BookId</td>
                <td>@book.Title</td>
                <td>@book.Borrower.Name</td>
                <td><a class="btn btn-success" asp-controller="Return" asp-action="ReturnBook" asp-route-bookId="@book.BookId">Return</a></td>
            </tr>
        }
    </tbody>
</table>